<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Fit.MainWindow"
        Title="Авторизация" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:"/>
            <TextBox Name="LoginTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Пароль:"/>
            <TextBox Name="PasswordTextBox" Margin="0,5,0,10"/>
            <Button Content="Войти" Click="Button_OnClick" HorizontalAlignment="Center"/>
            <Button Content="Регистрация" Click="RegistrationButton_OnClick" Margin="5,5"/>
        </StackPanel>
    </Grid>
</Window>
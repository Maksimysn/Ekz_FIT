<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="Fit.Reg"
        Title="Регистрация" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Логин:"/>
            <TextBox Name="LoginTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Пароль:"/>
            <TextBox Name="PasswordBox" Margin="0,5,0,10"/>
            <TextBlock Text="Подтвердите пароль:"/>
            <TextBox Name="ConfirmPasswordBox" Margin="0,5,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Зарегистрироваться" Click="RegistrationButton_OnClick" Margin="0,5"/>
                <Button Content="Отмена" Click="CancelButton_OnClick" Margin="5,5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>